#!/usr/bin/env python
"""
Script para ejecutar tests específicos sin problemas de importación
"""
import os
import sys
import subprocess

def run_specific_tests():
    """Ejecuta pruebas específicas que sabemos que funcionan"""
    tests = [
        'base.test_system_endpoints',
        'apps.projects.tests.test_models.WorkspaceModelTestCase',
        'apps.projects.tests.test_models.ProjectModelTestCase', 
        'apps.projects.tests.test_models.ProjectTemplateModelTestCase'
    ]
    
    cmd = ['python', 'manage.py', 'test'] + tests + ['--keepdb']
    print(f"Ejecutando pruebas específicas: {' '.join(cmd)}")
    
    return subprocess.call(cmd)

if __name__ == "__main__":
    sys.exit(run_specific_tests())
