# FICCT Enterprise SpringBoot Code Generation Platform
# Environment Configuration Template
# 
# Copy this file to .env and update the values for your environment

# ============================================================================
# BASIC DJANGO CONFIGURATION
# ============================================================================

# SECURITY WARNING: Generate a new secret key for production!
# You can use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# SECURITY WARNING: Set to False in production!
DEBUG=True

# Allowed hosts for the application (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS allowed origins for frontend (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database Settings
DB_NAME=ficct_enterprise
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis URL for caching, sessions, and Celery
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
DEFAULT_FROM_EMAIL=noreply@your-company.com

# Email settings
EMAIL_BACKEND=sendgrid_backend.SendgridBackend

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Secret Key (should be different from Django SECRET_KEY)
JWT_SECRET_KEY=your_jwt_secret_key_here

# 2FA Issuer Name (displayed in authenticator apps)
OTP_ISSUER_NAME=FICCT Enterprise Platform

# IP Whitelist for Admin Access (comma-separated)
ADMIN_IP_WHITELIST=127.0.0.1,localhost

# Enterprise Security Settings
ENTERPRISE_DOMAIN_VALIDATION=True
ENABLE_2FA_ENFORCEMENT=True
PASSWORD_EXPIRY_DAYS=90
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Frontend Application Base URL
FRONTEND_BASE_URL=http://localhost:3000

# API Base URL
API_BASE_URL=http://localhost:8000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable SQL query logging in DEBUG mode
LOG_SQL_QUERIES=False

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Database connection pool settings
DB_CONN_MAX_AGE=60
DB_CONN_HEALTH_CHECKS=True

# Cache timeout settings (in seconds)
CACHE_DEFAULT_TIMEOUT=300
CACHE_SESSION_TIMEOUT=86400

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=False

# Enable API documentation
ENABLE_API_DOCS=True

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# SSL/HTTPS Settings (set to True in production)
USE_SSL=False
SECURE_SSL_REDIRECT=False

# Security Headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Google Analytics Tracking ID (optional)
GOOGLE_ANALYTICS_ID=

# ============================================================================
# CLOUD STORAGE (Optional - for production file uploads)
# ============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
USE_S3_STORAGE=False

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Database backup settings
DB_BACKUP_ENABLED=True
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_SCHEDULE=0 2 * * *

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Slack webhook for critical alerts (optional)
SLACK_WEBHOOK_URL=

# Email alerts for security incidents
SECURITY_ALERT_EMAILS=admin@your-company.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable specific features
ENABLE_USER_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_2FA_BACKUP_CODES=True
ENABLE_AUDIT_LOGGING=True
ENABLE_RATE_LIMITING=True

# ============================================================================
# COMPLIANCE SETTINGS
# ============================================================================

# GDPR Compliance
GDPR_COMPLIANCE_ENABLED=True
DATA_RETENTION_DAYS=2555  # 7 years

# Session timeout for compliance (in seconds)
SESSION_COOKIE_AGE=86400  # 24 hours

# ============================================================================
# CUSTOM ENTERPRISE SETTINGS
# ============================================================================

# Company/Organization Details
COMPANY_NAME=Your Company Name
COMPANY_DOMAIN=your-company.com
SUPPORT_EMAIL=support@your-company.com

# Platform Configuration
PLATFORM_NAME=FICCT Enterprise Platform
PLATFORM_VERSION=1.0.0
PLATFORM_DESCRIPTION=Enterprise SpringBoot Code Generation Platform

# Default User Settings
DEFAULT_USER_ROLE=DEVELOPER
REQUIRE_EMAIL_VERIFICATION=True
AUTO_ACTIVATE_USERS=False
